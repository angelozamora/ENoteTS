extends  ./index

block content
  .container-lg#div-container
    div.notaDetail
      div.notaDetail-title 
        input(type="text" class="input-text notaDetail-title-text" readonly="readonly" value=`${note.title}`)
          
      div.notaDetail-body  
        span.d-block  !{note.body}
    
      div.notaDetail-options
        a(href=`/note/all-notes/${note.folder_id}` class="notaDetail-option-button")
          <i class="far fa-arrow-alt-circle-left  notaDetail-icon"></i>
        a(href=`/note/update/${note._id}` class="notaDetail-option-button")
          <i class="fas fa-edit  notaDetail-icon"></i>
        a(onclick=`deleteNote('${note._id}' , '${note.folder_id}')` class="notaDetail-option-button") 
          <i class="far fa-trash-alt  notaDetail-icon"></i>



  style.

    .notaDetail{
      position : relative;
      margin-top : 10px;
      padding : 5px 35px;
    }

    .notaDetail-title{
      max-width : 80%;
      color : var(--text-color);
    }

    .notaDetail-title-text{
      font-size : 1.3rem;
      font-weight : 700; 

    }


    .notaDetail-body{
      margin-top : 27px;
      height : calc(100vh - 210px);
      overflow-y : auto;
      color  : var(--text-color)

    }

    .notaDetail-options{
      position : absolute;
      top : 8px;
      right:-15px; 
    }

    
    .notaDetail-option-button {
      height: 45px;
      width: 45px;
      display: flex;
      align-items: center;
      justify-content: center;

      background-color: rgb(41, 41, 41);
      border-radius: 100%;
    }


    .notaDetail-option-button:nth-child(n+2) {
      margin-top: 12px;
    }

    
    .notaDetail-option-button:hover {
      background-color: var(--terciary-color);
    }


    .notaDetail-option-button:hover .notaDetail-icon {
      color: var(--text-color);
    }

    .notaDetail-icon {

      color: var(--terciary-color);
      font-size: 1.2rem;
    }
    

    
    @media (max-width: 991px) {
      .notaDetail{
        padding : 50px 5px 5px 5px;
        margin-top : 0;
      }

      .notaDetail-body{
        height : calc(100vh - 290px);
      }
      .notaDetail-options {
          top: 0;
          //- bottom: 5px;
          right: -8px;
          //- background-color : black;
          display : flex;
      }

      .notaDetail-option-button:nth-child(n+2) {
        margin-top: 0;
        margin-left : 12px;
      }

    }

  script. 
      
    function deleteNote(noteId , folderId){
      Swal.fire({
        title: 'Â¿Are you sure you want to delete the note?',
        icon: 'error',

        showCancelButton: true,
        confirmButtonColor:  '#E74C3C',
        cancelButtonColor: '#3085d6',
        cancelButtonText : 'No',
        confirmButtonText: 'Yes, delete!',
        reverseButtons: true,
        background: '#181818',
        customClass: {
            title: 'text-color',
        }
      }).then((result) => {
          if (result.isConfirmed) {
            loadForm();
            fetch(`/note/delete/${noteId}`, {
              method: "DELETE"
            }).then(res => {
              return res.json();
            })
            .then( data => {
              if(data.flag){
                confirmMessage(data.msg)
                setTimeout( function(){
                  window.location= `/note/all-notes/${folderId}`
                },2500)
              }else{
                swalMessage('error',data.msg)
              }
            });
          } 
      })
    }


