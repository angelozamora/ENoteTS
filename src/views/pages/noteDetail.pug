extends  ./index

block buttonNew
  +buttonNew(folderId)

block content
  .container-lg#div-container
    div.notaDetail
      div.notaDetail-title 
        input(type="text" class="input-text notaDetail-title-text" readonly="readonly" value=`${note.title}`)
          
      div.notaDetail-body  
        span.d-block  !{note.body}
    
      div.notaDetail-options
        a(href=`/folder/${note.folder_id}` class="notaDetail-option-button")
          <i class="far fa-arrow-alt-circle-left  notaDetail-icon"></i>
        a(href=`/note/update/${note._id}` class="notaDetail-option-button")
          <i class="fas fa-edit  notaDetail-icon"></i>
        a(onclick=`deleteNote('${note._id}' , '${note.folder_id}')` class="notaDetail-option-button") 
          <i class="far fa-trash-alt  notaDetail-icon"></i>

block modal
  +modalNewFolder(folderId)

  style.
    .notaDetail{
      position : relative;
      margin-top : 10px;
      padding : 5px 15px;
    }

    .notaDetail-title{
      max-width : 94%;
      color : var(--text-color);
    }

    .notaDetail-title-text{
      font-size : 1.3rem;
      font-weight : 700; 

    }


    .notaDetail-body{
      margin-top : 27px;
      padding-right : 28px;
      height : calc(100vh - 210px);
      overflow-y : auto;
      color  : var(--text-color)
    }

    .notaDetail-options{
      position : absolute;
      top : 8px;
      right:-5px; 
    }

    
    .notaDetail-option-button {
      height: 45px;
      width: 45px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #fff;
      border-radius: 100%;
      box-shadow : 0px 0px 5px black;
    }

    .darkmode .notaDetail-option-button{
      background-color: rgb(41, 41, 41);  
    }

    .notaDetail-option-button:nth-child(n+2) {
      margin-top: 12px;
    }
    
    .notaDetail-option-button:hover {
      background-color: var(--icon-note-color);
    }

    .notaDetail-option-button:hover .notaDetail-icon {
      color: white;
    }

    .notaDetail-icon {
      color: var(--icon-note-color);
      font-size: 1.2rem;
    }
    
    
    @media (max-width: 991px) {
      .notaDetail{
        padding : 50px 5px 5px 5px;
        margin-top : 0;
      }

      .notaDetail-title{
      max-width : 100%;
      }

      .notaDetail-body{
        height : calc(100vh - 290px);
        padding-right : 0;
      }
      .notaDetail-options {
          top: 0;
          right: -8px;
          display : flex;
      }

      .notaDetail-option-button:nth-child(n+2) {
        margin-top: 0;
        margin-left : 12px;
      }
    }

  script. 
      
    function deleteNote(noteId , folderId){
      Swal.fire({
        title: 'Â¿Are you sure you want to delete the note?',
        icon: 'error',

        showCancelButton: true,
        confirmButtonColor:  '#E74C3C',
        cancelButtonColor: '#3085d6',
        cancelButtonText : 'No',
        confirmButtonText: 'Yes, delete!',
        reverseButtons: true,
        background: '#181818',
        customClass: {
            title: 'text-color',
        }
      }).then((result) => {
          if (result.isConfirmed) {
            loadForm();
            fetch(`/note/delete/${noteId}`, {
              method: "DELETE"
            }).then(res => {
              return res.json();
            })
            .then( data => {
              if(data.flag){
                confirmMessage(data.msg)
                setTimeout( function(){
                  window.location= `/folder/${folderId}`
                },2500)
              }else{
                swalMessage('error',data.msg)
              }
            });
          } 
      })
    }


